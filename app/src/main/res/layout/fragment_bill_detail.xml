<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/fragment_bg"
    android:clickable="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="交易金额"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_billDetailAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_or_margin_15"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text=" "
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View style="@style/view_height_1_nomargin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="交易类型"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_BillDetailType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_or_margin_15"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text=" "
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View style="@style/view_height_1_nomargin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="用户编号"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_BillDetailUsrID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_or_margin_15"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text=" "
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View style="@style/view_height_1_nomargin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="交易时间"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_BillDetailTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_or_margin_15"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text=" "
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View style="@style/view_height_1_nomargin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="交易单号"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_BillDetailTn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_or_margin_15"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text=" "
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

    <View style="@style/view_height_1_nomargin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:visibility="visible">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="交易状态"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_BillDetailState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_or_margin_15"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text=" "
            android:textSize="@dimen/text_size_18" />

    </LinearLayout>

</LinearLayout>