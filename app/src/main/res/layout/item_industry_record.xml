<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_bg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_or_margin_8"
        android:layout_marginRight="@dimen/padding_or_margin_8"
        android:layout_marginTop="@dimen/padding_or_margin_10"
        android:background="@drawable/tv_search_shape"
        android:orientation="vertical"
        android:padding="@dimen/padding_or_margin_12">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三" />

            <TextView
                android:id="@+id/tv_record_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" - 180000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_record_what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_or_margin_12"
            android:text="今天只有残留的躯壳,迎接光辉岁月,风雨中拥抱自由" />

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_or_margin_12"
            android:text="2017年5月9日 12:20:12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_or_margin_12"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_green" />

            <TextView
                android:id="@+id/tv_record_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_or_margin_8"
                android:layout_toRightOf="@+id/iv_point"
                android:text="交易成功"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>