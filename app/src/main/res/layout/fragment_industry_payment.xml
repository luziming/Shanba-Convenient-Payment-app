<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/industry_payment"
    android:layout_width="match_parent"
    android:background="@color/fragment_bg"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rg_industry_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_education"
            android:text="教育"
            android:elevation="@dimen/padding_or_margin_5"
            style="@style/rb_species_style" />

        <RadioButton
            android:id="@+id/rb_property"
            android:layout_marginTop="1dp"
            android:elevation="@dimen/padding_or_margin_5"
            android:text="物业"
            style="@style/rb_species_style"/>

        <RadioButton
            android:id="@+id/rb_else"
            android:text="其他"
            android:layout_marginTop="1dp"
            android:elevation="@dimen/padding_or_margin_5"
            style="@style/rb_species_style"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_container_industry_type"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="@color/fragment_bg"
        android:layout_height="match_parent">
        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/recycle_species"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

        <!--</android.support.v7.widget.RecyclerView>-->

    </FrameLayout>
</LinearLayout>