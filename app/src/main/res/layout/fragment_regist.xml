<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phonenumber"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/login_edit_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:digits="0123456789"
            android:hint="@string/theinput"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="11"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inviteCode"
            android:textSize="@dimen/text_size_14" />

        <EditText
            android:id="@+id/edit_inviteCode"
            style="@style/login_edit_text_focusable"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:digits="0123456789"
            android:hint="@string/inviteCodeInput"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="11"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verificationCode"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@null"
                android:digits="0123456789"
                android:hint="@string/vernumber"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#000000"

                />

            <TextView
                android:id="@+id/obtain_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/clickver"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>
    </LinearLayout>

