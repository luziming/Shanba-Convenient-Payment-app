<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffd9d9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="5dp"
                    android:text="@string/tv_advice_inf"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/padding_or_margin_12" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_or_margin_25"
                android:layout_marginRight="@dimen/padding_or_margin_25"
                android:layout_marginTop="@dimen/padding_or_margin_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tv_no"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/text_size_18" />

                <AutoCompleteTextView
                    android:id="@+id/tv_yhbh"
                    style="@style/myAutoCompleteTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/target_input_bg"
                    android:digits="0123456789"
                    android:hint="@string/tv_input_yhbh"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="12"
                    android:padding="@dimen/padding_or_margin_12"
                    android:textColorHint="@color/phone_recharge_text"
                    android:textSize="@dimen/text_size_16" />

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_or_margin_25"
                android:layout_marginRight="@dimen/padding_or_margin_25"
                android:layout_marginTop="@dimen/padding_or_margin_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tv_jfys"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/text_size_18" />

                <EditText
                    android:id="@+id/tv_jfys"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/target_input_bg"
                    android:digits="123456789"
                    android:hint="@string/tv_input_jfys"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="13"
                    android:padding="@dimen/padding_or_margin_12"
                    android:textColorHint="@color/phone_recharge_text"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>


            <Button
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padding_or_margin_25"
                android:layout_marginRight="@dimen/padding_or_margin_25"
                android:layout_marginTop="@dimen/padding_or_margin_60"
                android:background="@drawable/bt_login_seletor"
                android:clickable="true"
                android:text="@string/tv_next_btn" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>