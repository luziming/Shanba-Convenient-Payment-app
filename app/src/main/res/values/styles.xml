<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/Indigo_colorPrimaryDark</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="et_reset_password">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_wihte_frame</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLength">18</item>
        <item name="android:padding">10dp</item>
        <item name="android:password">true</item>
    </style>

    <style name="myAutoCompleteTextViewStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@color/bg_white</item>
        <item name="android:dropDownVerticalOffset">5dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:divider">@color/darkseagreen</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="textview_info_linelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_or_margin_15</item>
        <item name="android:layout_marginRight">@dimen/padding_or_margin_15</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="textview_info_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textview_left</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="textview_info_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:lines">2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="textview_info_center">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:lines">2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="view_height_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_or_margin_15</item>
        <item name="android:layout_marginRight">@dimen/padding_or_margin_15</item>
        <item name="android:background">#e6e6e6</item>
    </style>
    <style name="view_height_1_nomargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e6e6e6</item>
    </style>

    <!-- 选择运营商的RadioButton -->
    <style name="rb_style">
        <item name="android:padding">@dimen/padding_or_margin_10</item>
        <item name="android:background">@drawable/tv_seletor</item>
        <item name="android:textColor">@color/tv_color_seletor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 选择全行业分类的RadioButton -->
    <style name="rb_species_style">
        <item name="android:padding">@dimen/padding_or_margin_10</item>
        <item name="android:background">@drawable/tv_species_seletor</item>
        <item name="android:textColor">@color/tv_species_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/target_edittext_css</item>
        <item name="android:ems">20</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:padding">6dip</item>
    </style>

    <style name="login_edit_text_focusable">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:ems">20</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:padding">6dip</item>
    </style>

    <style name="Splash_Theme" parent="AppTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    <!-- 启动时页面为透明色，避免显示空白页，好像有问题，还是空白页 -->
    <item name="android:windowIsTranslucent">true</item>
    <!-- 这个起作用，启动时有点延时，实际就是加载了透明的背景，如微信6.3.28 -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!-- 设置启动背景图片，避免显示空白页，如支付宝9.9.5 -->
    <!-- <item name="android:windowBackground">@drawable/splash_bg</item>  -->
    <!-- 隐藏标题栏 -->
    <item name="android:windowNoTitle">true</item>
    <!-- 隐藏状态栏 -->
    <!-- <item name="android:windowFullscreen">true</item> -->
</style>

</resources>
